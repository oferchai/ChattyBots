# Production Environment Configuration Template
# Multi-Agent AI Chat System
# 
# IMPORTANT: Copy this to .env.production and fill in actual values
# DO NOT commit .env.production to version control

# Application
ENVIRONMENT=production
DEBUG=false
APP_NAME=Multi-Agent AI Chat System
VERSION=1.0.0

# Server
SERVER__HOST=0.0.0.0
SERVER__PORT=8000
SERVER__RELOAD=false
SERVER__WORKERS=4
SERVER__ACCESS_LOG=true
# SERVER__SSL_KEYFILE=/path/to/ssl.key
# SERVER__SSL_CERTFILE=/path/to/ssl.crt

# Database
DATABASE__URL=postgresql://username:password@host:port/dbname
# DATABASE__URL=mysql://username:password@host:port/dbname
DATABASE__ECHO=false
DATABASE__POOL_SIZE=10
DATABASE__MAX_OVERFLOW=20
DATABASE__POOL_TIMEOUT=30
DATABASE__POOL_RECYCLE=3600

# Security
SECURITY__CORS_ORIGINS=["https://yourdomain.com", "https://app.yourdomain.com"]
SECURITY__CORS_CREDENTIALS=true
SECURITY__RATE_LIMIT_PER_MINUTE=60
SECURITY__SECRET_KEY=your-very-secure-secret-key-here-change-this
SECURITY__API_KEYS={"service1": "api-key-1", "service2": "api-key-2"}

# LLM Configuration
LLM__PROVIDER=openrouter
LLM__FALLBACK_STRATEGY=retry
LLM__MAX_TOKENS=2048
LLM__TEMPERATURE=0.7
LLM__CONTEXT_WINDOW=4096

# Ollama Settings (Production backup)
LLM__OLLAMA__BASE_URL=http://ollama-server:11434
LLM__OLLAMA__MODEL=llama2
LLM__OLLAMA__TIMEOUT=90
LLM__OLLAMA__MAX_RETRIES=3
LLM__OLLAMA__HEALTH_CHECK_INTERVAL=60

# OpenRouter Settings (Primary)
LLM__OPENROUTER__API_KEY=your_openrouter_api_key_here
LLM__OPENROUTER__MODEL=anthropic/claude-3-sonnet
LLM__OPENROUTER__BASE_URL=https://openrouter.ai/api/v1
LLM__OPENROUTER__TIMEOUT=120
LLM__OPENROUTER__MAX_RETRIES=3
LLM__OPENROUTER__COST_LIMIT_USD=200.0

# Agent Configuration
AGENTS__RESPONSE_TIMEOUT=60
AGENTS__MAX_CONVERSATION_ROUNDS=30
AGENTS__CONSENSUS_THRESHOLD=0.8
AGENTS__RETRY_FAILED_RESPONSES=true
AGENTS__MAX_MESSAGE_LENGTH=8000
AGENTS__THINKING_DELAY_SECONDS=2.0

# Logging
LOGGING__LEVEL=INFO
LOGGING__FILE_PATH=/var/log/chatbot/app.log
LOGGING__MAX_FILE_SIZE_MB=50
LOGGING__BACKUP_COUNT=10
LOGGING__JSON_FORMAT=true
LOGGING__CONSOLE_OUTPUT=true
